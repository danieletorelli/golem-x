package component: router;

interface router-api {
  variant action {
    register(string),
    follow(string),
    unfollow(string),
    post-tweet(string),
  }

  enum query-type {
    user-profile,
    user-followers,
    user-following,
    user-tweets,
    user-timeline,
  }

  record user-profile {
    user-id: string,
    username: string,
    followers: list<string>,
    following: list<string>,
  }

  record tweet {
    tweet-id: string,
    author-id: string,
    content: string,
    timestamp: s64,
  }

  record tweet-data {
    user-id: string,
    tweets: list<tweet>,
  }

  record timeline-data {
    author-id: string,
    tweet: tweet,
  }

  variant router-action-response {
    success,
    failure(string),
  }

  variant router-query-response {
    user-profile-response(user-profile),
    user-followers-response(list<string>),
    user-following-response(list<string>),
    user-tweets-response(tweet-data),
    user-timeline-response(list<timeline-data>),
    failure(string),
  }

  // Route actions to appropriate workers based on consistent hashing or other criteria
  route-action: func(action: action, user-id: string) -> router-action-response; // response

  // Route queries to appropriate workers based on consistent hashing or other criteria
  route-query: func(query-type: query-type, user-id: string) -> router-query-response; // response
}

world router {
  import component: user-management-stub/stub-user-management;
  import component: tweet-management-stub/stub-tweet-management;
  import component: timeline-management-stub/stub-timeline-management;

  export router-api;
}
